root = true

# Configuration for all files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true

# Lua specific formatting settings
[*.lua]
indent_style = space
indent_size = 3
trim_trailing_whitespace = true

# JS and JSON specific formatting settings
[*.{js,json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
